@model UpdateTestimonialDto
@{
    ViewData["Title"] = "updateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<h1>Referans Bilgi Güncelle</h1>
<br />
<form method="post">
    <input type="hidden" asp-for="testimonialID" />
    <label>Referans Adı Soyadı</label>
    <input type="text" asp-for="testimonialName" class="form-control" />
    <br />
    <label> Yorum</label>
    <input type="text" asp-for="testimonialComment" class="form-control" />
    <br />
    <label>Referans Görseli</label>
    <input type="text" asp-for="testimonialImageUrl" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

