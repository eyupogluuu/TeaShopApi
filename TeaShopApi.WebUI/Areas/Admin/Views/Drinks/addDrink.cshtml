@model CreateDrinkDto
@{
    ViewData["Title"] = "addDrink";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni İçecek Ekle</h1>
<br />
<form method="post">  
    <label>İçecek Adı</label>
    <input type="text" asp-for="drinkName" class="form-control" />
    <br />
     <label>İçecek Fiyatı</label>
    <input type="text" asp-for="drinkPrice" class="form-control" />
    <br />
     <label>İçecek Görseli</label>
    <input type="text" asp-for="drinkImageUrl" class="form-control" />
    <br />
    <button class="btn btn-outline-secondary">Kaydet</button>
</form>

