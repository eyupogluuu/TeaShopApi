@model UpdateContactDto
@{
    ViewData["Title"] = "updateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<h1>Mesaj Bilgi Güncelle</h1>
<br />
<form method="post">
    <input type="hidden" asp-for="contactID" />
    <label>Gönderen Adı Soyadı</label>
    <input type="text" asp-for="messageSenderName" class="form-control" />
    <br />
    <label>Maili</label>
    <input type="text" asp-for="messageMail" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="messageSubject" class="form-control" />
    <br />
    <label>Mesaj</label>
    <input type="text" asp-for="messageDetail" class="form-control" />
    <br />
    <label>Tarih</label>
    <input type="text" asp-for="messageSendDate" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>



