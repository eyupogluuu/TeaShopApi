@model CreateContactDto
@{
    ViewData["Title"] = "addContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<h1>Yeni Mesaj Ekle</h1>
<br />
<form method="post">
    <label>Gönderen</label>
    <input type="text" asp-for="messageSenderName" class="form-control" />
    <br />
    <label>Mail</label>
    <input type="text" asp-for="messageMail" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="messageSubject" class="form-control" />
    <br /> 
    <label>Mesaj</label>
    <input type="text" asp-for="messageDetail" class="form-control" />
    <br />
    <label>Tarih</label>
    <input type="text" asp-for="messageSendDate" class="form-control" />
    <br />
    <button class="btn btn-outline-secondary">Kaydet</button>
</form>


